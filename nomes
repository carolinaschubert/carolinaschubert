def coletar_nomes():
    nomes = []  # Lista para armazenar os nomes
    
    while True:
        nome = input("Digite um nome (ou 'sair' para terminar): ")
        
        if nome.lower() == 'sair':
            break  # Sai do loop se o nome for 'sair'
        
        nomes.append(nome)  # Adiciona o nome à lista
    
    # Imprime todos os nomes, um em cada linha
    print("\nNomes digitados:")
    for nome in nomes:
        print(nome)

# Exemplo de uso da função
coletar_nomes()
