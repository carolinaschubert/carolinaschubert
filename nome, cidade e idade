def imprimir_informacoes(nome, idade, cidade):
    # Imprime o nome seguido de uma vírgula e espaço, usando sep
    print(nome, end=', ')
    
    # Imprime a idade seguida de uma vírgula e espaço, usando sep
    print(idade, end=', ')
    
    # Imprime a cidade e finaliza a linha, usando end para adicionar um ponto final
    print(cidade, end='.')

# Exemplo de uso da função
imprimir_informacoes('João', 30, 'São Paulo')
